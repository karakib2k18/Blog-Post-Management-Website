extends ../layouts/layout

block content
  h1 Admin Panel

  h2 Users
  table.table.table-striped
    thead
      tr
        th Username
        th Is Admin?
    tbody
      each user in users
        tr
          td= user.username
          td= user.isAdmin

  h2 Blog Posts
  table.table.table-striped
    thead
      tr
        th Title
        th Author
        th Actions
    tbody
      each post in posts
        tr
          td= post.title
          td= post.createdBy.username
          td
            a.btn.btn-danger(href=`/admin/posts/${post._id}/delete`) Delete
