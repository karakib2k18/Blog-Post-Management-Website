extends ../layouts/layout

block content
  h1 Edit Post
  form(method='POST', action=`/posts/${post._id}`)
    .mb-3
      label.form-label(for='title') Title
      input.form-control(type='text', name='title', value=post.title, required)
    .mb-3
      label.form-label(for='content') Content
      textarea.form-control(name='content', rows='5', required)= post.content
    .mb-3
      label.form-label(for='tags') Tags (comma separated)
      input.form-control(type='text', name='tags', value=post.tags.join(', '))
    button.btn.btn-primary(type='submit') Update Post
